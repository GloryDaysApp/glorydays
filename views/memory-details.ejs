<header>
    <%- include('partials/head') %>
    <!-- <h1><%= title %></h1> -->
</header>

<section class="container container--details" id="navigation-state--nav-only">
    <div class="container--details-back">
        <a href="/memories-overview" class="back">Terug naar herinneringen</a>
    </div>
        <% if (data.title) { %>
            <h1><%=data.title%></h1>
        <% } %>
        <p>Toegevoegd door op <span class="date"> 15-05-2020</span></p>
        <% if (data.description) { %>
            <p><%=data.description%></p>
        <% } %>
        <% if (data.song) { %>
            <div class="song-information song-click" id="<%=data.song[0].id%>"> 
        <% } else { %>
            <div class="song-information"> 
        <% } %>

                <% if (data.media.length > 0) { %>
                    <img src=".<%=data.media[0].path%>" alt="chosen memory image" class="background-image">
                <% } else if (data.song.length > 0) { %>
                    <img src="<%=data.song[0].albumCover%>" alt="album cover" class="background-image">
                <% } %>
                <div class="overlay"></div>
                <p class="title"><%=data.song[0].name%></p>
                <p class="artist"><%=data.song[0].artist%></p>
                <img src="/play_icon_blue.svg" alt="play icon" class="play" id="play-btn">
            </div>
        
        <h2>Alex's ervaring van de herinnering</h2>

        <div class="sliders">
            <p>Emotie</p>
            <div class="slidecontainer">
                <input type="range" min="0" max="10" step="2.5" 
                <% if (data.emotion) { %>
                    <% if (data.emotion === '10') { %>
                        value="10"
                    <% } else if (data.emotion === '7.5') { %>
                        value="7.5"
                    <% } else if (data.emotion === '5') { %>
                        value="5"
                    <% } else if (data.emotion === '2.5') { %>
                        value="2.5"
                    <% } else if (data.emotion === '0') { %>
                        value="0"
                    <% } %>
                <% } else { %>
                   5 <% } %> class="slider-heart" id="range-heart" list="number">
                <svg class="heart" id="heart" data-name="heart" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19.93 18.25">
                    <title>Heart (ranking the experience color)</title>
                    <path class="heart" id="heart-path"
                          d="M225.09,262.45a5.54,5.54,0,0,1,5.17-3.27,4.84,4.84,0,0,1,3,1.46,5.63,5.63,0,0,1,1.17,3.22c.19,3-3.51,7.8-9.59,12.33a50.54,50.54,0,0,1-5.81-5.65c-2.73-3.12-3.56-4.86-3.52-6.56a6,6,0,0,1,.45-2.09,5.23,5.23,0,0,1,2.23-2.51C220,258.49,223.05,259.58,225.09,262.45Z"
                          transform="translate(-214.95 -258.59)" />
                </svg>
                <p class="container-slider-value"><span class="value-heart" id="value-heart"></span><span
                            id="value-descr-heart">normaal</span></p>
            </div>
        
            <p>Energie</p>
            <div class="slidecontainer">
                <input type="range" min="0" max="10" step="2.5" 
                <% if (data.energy) { %>
                    <% if (data.energy === '10') { %>
                        value="10"
                    <% } else if (data.energy === '7.5') { %>
                        value="7.5"
                    <% } else if (data.energy === '5') { %>
                        value="5"
                    <% } else if (data.energy === '2.5') { %>
                        value="2.5"
                    <% } else if (data.energy === '0') { %>
                        value="0"
                    <% } %>
                <% } else { %>
                   5 <% } %> 
                class="slider-lightning" id="range-lightning"
                       list="number">
                <svg class="lightning" id="lightning" id="lightning" data-name="lightning" xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 318.15 509.65">
                    <title>Lightning (ranking the experience color)</title>
                    <path id="lightning-path"
                          d="M413.62,197.41a10.67,10.67,0,0,0-9.28-5.41H264.61L288,13a10.73,10.73,0,0,0-19.66-7L98.45,303.75A10.67,10.67,0,0,0,107.53,320H245.18L226.61,499.26a10.73,10.73,0,0,0,19.76,6.56L413.5,208.15a10.67,10.67,0,0,0,.13-10.74Z"
                          transform="translate(-96.86 -1.16)" />
                </svg>
                <p class="container-slider-value"><span class="value-lightning" id="value-lightning"></span><span
                            id="value-descr-lightning">normaal</span></p>
            </div>
        </div>

        <div class="container-catchword">
            <h2>Steekwoorden </h2>
            <% if (data.title) { %>
                <% data.keywords.forEach(keyword => {%>
                    <span class="catchword"><%=keyword %></span>
                    <% }) %>
            <% } %>
        </div>

        <div class="container-btn">
            <a class="share-btn" id="share-btn"><img src="share.svg" alt="Share icon"></a>
            <a class="edit-btn"><img src="edit.svg" alt="Edit icon"></a>
        </div>
</section>

<%- include('partials/navigation-holder') %>
<%- include('partials/footer') %>
