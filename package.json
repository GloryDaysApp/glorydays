{
    "name": "glory-days",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "prestart": "npm run build",
        "start": "node server.js",
        "predev": "npm run build",
        "dev": "nodemon server.js",
        "dev:watch": "concurrently \"npm run dev\" \"npm run watch\"",
        "prebuild": "rimraf static",
        "build": "npm-run-all build:*",
        "build:css": "node scripts/build/build-css.js",
        "build:js": "node scripts/build/build-js.js",
        "build:assets": "node scripts/build/build-static-assets.js",
        "watch": "run-p watch:*",
        "watch:css": "chokidar 'src/scss/**/*.scss' --command 'npm run build:css'",
        "watch:js": "chokidar 'src/js/**/*.js' --command 'npm run build:js'",
        "watch:assets": "chokidar 'src/img/*.*' --command 'npm run build:assets'",
        "watch:lint": "chokidar '**/*.js' --command 'npm run lint --silent'",
        "watch:stylelint": "chokidar '**/*.scss' --command 'npm run stylelint --silent'",
        "lint": "eslint '**/*.js' --ignore-path .gitignore .",
        "stylelint": "stylelint '**/*.scss'",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GloryDaysApp/glorydays.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/GloryDaysApp/glorydays/issues"
    },
    "homepage": "https://github.com/GloryDaysApp/glorydays#readme",
    "dependencies": {
        "cookie-parser": "^1.4.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.3",
        "express": "^4.17.1",
        "node-fetch": "^2.6.0",
        "npm-run-all": "^4.1.5",
        "query-string": "^6.12.1",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "chokidar-cli": "^2.1.0",
        "concurrently": "^5.2.0",
        "eslint": "^7.1.0",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^7.0.1",
        "gulp-clean-css": "^4.3.0",
        "gulp-concat": "^2.6.1",
        "gulp-minify": "^3.1.0",
        "gulp-sass": "^4.1.0",
        "nodemon": "^2.0.4",
        "npx": "^10.2.2",
        "stylelint": "^13.5.0",
        "stylelint-config-sass-guidelines": "^7.0.0",
        "stylelint-config-standard": "^20.0.0"
    }
}
